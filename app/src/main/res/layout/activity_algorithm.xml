<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pure_black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.shrika.simplx.algorithm">
    <TextView
        android:layout_width="100dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="C++"
        android:id="@+id/algLang"
        android:background="@drawable/mainback"
        android:layout_marginLeft="9dp"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:background="@drawable/mainback3"
        android:layout_marginTop="56dp"/>
    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/viewpagertab"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="48dp"
        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorWithoutPadding="false"
        app:stl_indicatorInFront="false"
        android:clipToPadding="false"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorGravity="center"
        app:stl_indicatorColor="@color/White"
        app:stl_indicatorThickness="36dp"
        app:stl_indicatorWidth="auto"
        app:stl_indicatorCornerRadius="36dp"
        app:stl_overlineColor="#4D000000"
        app:stl_overlineThickness="0dp"
        app:stl_underlineColor="@color/transparent_black_hex_1"
        app:stl_underlineThickness="0dp"
        app:stl_dividerColor="@color/transparent_black_hex_1"
        app:stl_dividerThickness="0dp"
        app:stl_defaultTabBackground="?attr/selectableItemBackground"
        app:stl_defaultTabTextAllCaps="true"
        app:stl_defaultTabTextColor="@color/pure_black"
        app:stl_defaultTabTextSize="15dp"
        app:stl_defaultTabTextHorizontalPadding="18dp"
        app:stl_defaultTabTextMinWidth="0dp"
        app:stl_distributeEvenly="true"
        app:stl_clickable="true"
        app:stl_titleOffset="24dp"
        app:stl_drawDecorationAfterTab="false"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/mainbackleft"
        android:paddingTop="36dp"
        android:layout_marginBottom="80dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/micareaback"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:src="@drawable/record"
        android:clickable="true"
        android:id="@+id/btnSpeak"/>
</RelativeLayout>
